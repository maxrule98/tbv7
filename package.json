{
	"name": "agenai-trader",
	"private": true,
	"version": "1.0.0",
	"packageManager": "pnpm@8.15.6",
	"scripts": {
		"build": "pnpm -r run build",
		"dev": "pnpm -r run dev",
		"test": "pnpm run validate:strategies && pnpm -r run test",
		"lint": "pnpm -r run lint",
		"backtest": "pnpm --filter @agenai/backtester-cli run dev --",
		"metrics:process": "pnpm --filter @agenai/metrics run start",
		"strategy:list": "ts-node packages/core/src/strategies/listStrategies.ts",
		"validate:strategies": "ts-node packages/core/src/strategies/validateStrategyStructure.ts",
		"clean": "pnpm -r exec -- rm -rf dist build .turbo && rm -rf output/",
		"format": "prettier --write .",
		"trader:build": "pnpm --filter @agenai/trader-cli run build",
		"trader:start": "pnpm --filter @agenai/trader-cli run start",
		"server:build": "pnpm --filter @agenai/trader-server run build",
		"server:start": "pnpm --filter @agenai/trader-server run start",
		"check": "pnpm run lint && pnpm run test"
	},
	"devDependencies": {
		"@types/node": "^20.11.30",
		"@typescript-eslint/eslint-plugin": "^7.17.0",
		"@typescript-eslint/parser": "^7.17.0",
		"eslint": "^8.56.0",
		"prettier": "^3.2.5",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.4.5",
		"vitest": "^1.5.0"
	},
	"dependencies": {
		"protobufjs": "^7.5.4"
	}
}
